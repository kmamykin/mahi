<% form.inputs :id => "userinfo" do %>
  <%= form.input :first_name, :label => 'First name' %>
  <%= form.input :last_name, :label => 'Last name' %>
  <%= form.input :phone_number, :label => 'Phone number' %>
  <%= form.input :login, :label => 'Login' %>
  <%= form.input :email, :label => 'Email' %>
  <%= form.input :password, :label => form.object.new_record? ? nil : "Change password" %>
  <%= form.input :password_confirmation %>
<% end %>